<html>
<head>
    <title>To-do List</title>
    <link rel="stylesheet" href="../public/style/style.css" />
</head>
<body>
    <div id="todo">
        <table>
            <tr >
                <th colspan="3">
                <from id="todo-form">
                    <h2>To-do web-application</h2>
                    <input type="text" id="task" placeholder="add tasks" required />
                    <button type="submit" id="submit-task">Add</button>
                </from>
                </th>
            </tr>
            <!-- the above only the form -->
            <% tasks.forEach(function(task){ %>
            <tr>
                   <td class="item"><%= task["task"] %></td>
                   <td><button type="submit" id="delete-task">Delete</button></td>
           </tr>
           <% }); %>

        </table>

    </div>

<script src="../public/js/todoRequest.js"></script>
</body>
</html>